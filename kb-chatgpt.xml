<?xml version="1.0" encoding="utf-8"?>
<knowledge_base>
  <!-- Facts -->
  <fact>
    <animal>
      <name>Lion</name>
      <habitat>Africa</habitat>
      <diet>Carnivore</diet>
    </animal>
  </fact>

  <fact>
    <animal>
      <name>Elephant</name>
      <habitat>Asia</habitat>
      <diet>Herbivore</diet>
    </animal>
  </fact>

  <!-- Rules -->
  <rule>
    <if>
      <condition>
        <property>habitat</property>
        <value>Africa</value>
      </condition>
      <condition>
        <property>diet</property>
        <value>Carnivore</value>
      </condition>
    </if>
    <then>
      <conclusion>
        <text>The animal is likely a carnivorous species found in Africa.</text>
      </conclusion>
    </then>
  </rule>

  <rule>
    <if>
      <condition>
        <property>habitat</property>
        <value>Asia</value>
      </condition>
      <condition>
        <property>diet</property>
        <value>Herbivore</value>
      </condition>
    </if>
    <then>
      <conclusion>
        <text>The animal is likely a herbivorous species found in Asia.</text>
      </conclusion>
    </then>
  </rule>
</knowledge_base>
