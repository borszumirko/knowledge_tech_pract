<knowledge_base>

    <!-- Rules -->

    <rule>
        <if>
            <temperature>getting warmer</temperature>
        </if>
        <then>
            <front>warm</front>
        </then>
    </rule>

    <rule>
        <if>
            <temperature>getting colder</temperature>
        </if>
        <then>
            <front>cold</front>
        </then>
    </rule>

    <rule>
        <if>
            <temperature>did not change</temperature>
        </if>
        <then>
            <front>neutral</front>
        </then>
    </rule>

    <rule>
        <if>
            <front>warm</front>
        </if>
        <then>
            <air_pressure>decline</air_pressure>
        </then>
    </rule>

    <rule>
        <if>
            <front>cold</front>
        </if>
        <then>
            <air_pressure>rise</air_pressure>
        </then>
    </rule>

    <rule>
        <if>
            <air_pressure>decline</air_pressure>
        </if>
        <then>
            <oxygenlevel>low</oxygenlevel>
        </then>
    </rule>

    <rule>
        <if>
            <air_pressure>rise</air_pressure>
        </if>
        <then>
            <oxygenlevel>high</oxygenlevel>
        </then>
    </rule>

    <rule>
        <if>
            <speed>fast</speed>
        </if>
        <then>
            <fishsize>small</fishsize>
        </then>
    </rule>

    <rule>
        <if>
            <speed>slow</speed>
            <depth>deep</depth>
        </if>
        <then>
            <fishsize>big</fishsize>
        </then>
    </rule>

    <rule>
        <if>
            <water>standing</water>
            <depth>deep</depth>
        </if>
        <then>
            <fishsize>big</fishsize>
        </then>
    </rule>

    <rule>
        <if>
            <water>standing</water>
            <depth>shallow</depth>
        </if>
        <then>
            <fishsize>small</fishsize>
        </then>
    </rule>

    <rule>
        <if>
            <sky>sunny</sky>
        </if>
        <then>
            <lighting>light</lighting>
        </then>
    </rule>

    <rule>
        <if>
            <sky>cloudy</sky>
        </if>
        <then>
            <lighting>dark</lighting>
        </then>
    </rule>

    <rule>
        <if>
            <time>night</time>
        </if>
        <then>
            <lighting>dark</lighting>
        </then>
    </rule>

    <rule>
        <if>
            <season>summer</season>
        </if>
        <then>
            <watertemp>above 10C</watertemp>
        </then>
    </rule>

    <rule>
