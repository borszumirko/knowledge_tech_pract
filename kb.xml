<?xml version="1.0"?>
<knowledge>
  <title>Is the person obliged to repair the damages?</title>

  <goal name="obligation to repair damages">
    <answer value="yes">The person has to repair the damages</answer>
    <answer value="no">The person does not have to repair the damages</answer>
  </goal>

  
  
  <rule>
    <description>Deciding obligation</description>
    <if>
      <and>
        <fact name="person commits tortious act">yes</fact>
        <fact name="act can be attributed to them">yes</fact>
        <fact name="intention to offer protection">no</fact>
      </and>
    </if>
    <then>
      <fact name="obligation to repair damages">yes</fact>
    </then>
  </rule>

  <rule>
    <description>Deciding obligation</description>
    <if>
      <or>
        <fact name="person commits tortious act">no</fact>
        <fact name="act can be attributed to them">no</fact>
        <fact name="intention to offer protection">yes</fact>
      </or>
    </if>
    <then>
      <fact name="obligation to repair damages">no</fact>
    </then>
  </rule>

  
  
  <rule>
    <description>Deciding if act is tortious</description>
    <if>
      <and>
        <or>
          <fact name="act violates right">yes</fact>
          <fact name="act violates a duty imposed by written or unwritten law">yes</fact>
        </or>
        <fact name="act is justified">no</fact>
      </and>
    </if>
    <then>
      <fact name="person commits tortious act">yes</fact>
    </then>
  </rule>

  <rule>
    <description>Deciding if act is tortious</description>
    <if>
      <or>
        <and>
          <fact name="act violates right">no</fact>
          <fact name="act viloates a duty imposed by written or unwritten law">no</fact>
        </and>
        <fact name="act is justified">yes</fact>
      </or>
    </if>
    <then>
      <fact name="person commits tortious act">no</fact>
    </then>
  </rule>


  
  
  <rule>
    <description>Deciding if act is attributed to the person</description>
    <if>
      <and>
        <or>
          <fact name="act resulted from their fault">yes</fact>
          <fact name="act resulted from a cause they are responsible for">yes</fact>
        </or>
        <fact name="person is a child">no</fact>
      </and>
    </if>
    <then>
      <fact name="act can be attributed to them">yes</fact>
    </then>
  </rule>

  <rule>
    <description>Deciding if act is attributed to the person</description>
    <if>
      <or>
        <and>
          <fact name="act resulted from their fault">no</fact>
          <fact name="act resulted from a cause they are responsible for">no</fact>
        </and>
        <fact name="person is a child">yes</fact>
      </or>
    </if>
    <then>
      <fact name="act can be attributed to them">no</fact>
    </then>
  </rule>





  <question>
    <description>Did the person intend to offer protection against damage as suffered by the injured person?</description>
    <option>
      <description>yes</description>
      <then>
        <fact name="intention to offer protection">yes</fact>
      </then>
    </option>
    <option>
      <description>no</description>
      <then>
        <fact name="intention to offer protection">no</fact>
      </then>
    </option>
  </question>

  <question>
    <description>Is the person less than 14 years old?</description>
    <option>
      <description>yes</description>
      <then>
        <fact name="person is a child">yes</fact>
      </then>
    </option>
    <option>
      <description>no</description>
      <then>
        <fact name="person is a child">no</fact>
      </then>
    </option>
  </question>

  <question>
    <description>Was there justification for the person's behaviour?</description>
    <option>
      <description>yes</description>
      <then>
        <fact name="act is justified">yes</fact>
      </then>
    </option>
    <option>
      <description>no</description>
      <then>
        <fact name="act is justified">no</fact>
      </then>
    </option>
  </question>

  <question>
    <description>Did the act violate someone else's rights?</description>
    <option>
      <description>yes</description>
      <then>
        <fact name="act violates right">yes</fact>
      </then>
    </option>
    <option>
      <description>no</description>
      <then>
        <fact name="act violates right">no</fact>
      </then>
    </option>
  </question>

  <question>
    <description>Did the act violate a duty imposed by written or unwritten law?</description>
    <option>
      <description>yes</description>
      <then>
        <fact name="act violates a duty imposed by written or unwritten law">yes</fact>
      </then>
    </option>
    <option>
      <description>no</description>
      <then>
        <fact name="act violates a duty imposed by written or unwritten law">no</fact>
      </then>
    </option>
  </question>

  <question>
    <description>Did the damage result from the person's fault?</description>
    <option>
      <description>yes</description>
      <then>
        <fact name="act resulted from their fault">yes</fact>
      </then>
    </option>
    <option>
      <description>no</description>
      <then>
        <fact name="act resulted from their fault">no</fact>
      </then>
    </option>
  </question>

  <question>
    <description>Did the damage result from a cause they are responsible for?</description>
    <option>
      <description>yes</description>
      <then>
        <fact name="act resulted from a cause they are responsible for">yes</fact>
      </then>
    </option>
    <option>
      <description>no</description>
      <then>
        <fact name="act resulted from a cause they are responsible for">no</fact>
      </then>
    </option>
  </question>

</knowledge>
